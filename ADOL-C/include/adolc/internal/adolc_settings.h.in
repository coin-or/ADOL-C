#if !defined(ADOLC_ADOLC_SETTINGS_H)
#define ADOLC_ADOLC_SETTINGS_H 1

#include <adolc/adolcexport.h>
#include <stddef.h>
/*--------------------------------------------------------------------------*/
/* ADOL-C data types */

// clang-format off
typedef size_t locint; /* ensure locint is unsigned */
typedef double revreal;

/*--------------------------------------------------------------------------*/
/* Enable/disable advanced branching */
@ADVBRANCH@

/*--------------------------------------------------------------------------*/
/* Use reference counting for tapeless numbers */
@ADTL_REFCNT@

/*--------------------------------------------------------------------------*/
/* Sparse drivers have been compiled */
@SPARSE_DRIVERS@

/*--------------------------------------------------------------------------*/
/* Use Boost Library Pool allocator */
@USE_BOOST_POOL@


// stores information about the version of ADOL-C and the size of some data
// types
struct ADOLC_API ADOLC_ID {
  short adolc_ver;
  short adolc_sub;
  short adolc_lvl;
  size_t locint_size;
  size_t double_size;
  size_t address_size;
};

ADOLC_API const ADOLC_ID &get_adolc_id();

// clang-format on

#endif
